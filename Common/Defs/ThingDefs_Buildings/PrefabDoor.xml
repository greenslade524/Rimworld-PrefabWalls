<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="DoorBase">
    <defName>PrefabDoor</defName>
    <label>prefab door</label>
    <description>A door assembled from pre-formed metal panels. Snap-fit construction allows rapid installation and removal with no material loss. Functions like a standard door.</description>
    <designatorDropdown>PrefabDoors_Dropdown</designatorDropdown>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>50</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <graphicData>
      <texPath>Things/Building/Door/DoorSimple_Mover</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Door/DoorSimple_MenuIcon</uiIconPath>
    <!-- No stuff categories - uses prefab panels directly -->
    <stuffCategories Inherit="False" />
    <useStuffTerrainAffordance>false</useStuffTerrainAffordance>
    <resourcesFractionWhenDeconstructed>1</resourcesFractionWhenDeconstructed>
    <costList>
      <PrefabPanel>3</PrefabPanel>
    </costList>
    <designationHotKey>Misc4</designationHotKey>
    <researchPrerequisites>
      <li>PrefabConstruction</li>
    </researchPrerequisites>
  </ThingDef>

</Defs>
